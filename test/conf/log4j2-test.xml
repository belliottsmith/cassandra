<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <RollingFile name="FILE" fileName="./build/test/logs//system.log"
	            filePattern="./build/test/logs/system.log.%i.log.gz">
	    <PatternLayout pattern="%-5level [%thread] %date{ISO8601} %F:%L - %msg%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="20 MB"/>
            </Policies>
	    <DefaultRolloverStrategy max="20"/>
        </RollingFile>
	<Console name="STDERR" target="SYSTEM_ERR">
		<PatternLayout pattern="%-5level %date{HH:mm:ss,SSS} %msg%n"/>
		<Filters>
			<ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
		</Filters>
	</Console>
	<Console name="STDOUT" target="SYSTEM_OUT">
		<PatternLayout pattern="%-5level %date{HH:mm:ss,SSS} %msg%n"/>
		<Filters>
			<ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
		</Filters>
	</Console>
        <Async name="ASYNC">
            <AppenderRef ref="FILE" />
	    <AppenderRef ref="STDERR" />
	    <AppenderRef ref="STDOUT" />
        </Async>
    </Appenders>
    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="ASYNC" />
        </Root>
    </Loggers>
</Configuration>

