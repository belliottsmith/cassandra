<!-- log4j configuration reporting status set to ERROR to suppress errors
     about unloadable JNDI/JMX lookups.  If having issues with config, lower
     this to INFO or DEBUG to find them.
     packages set to find the instance plugin in InstanceIdDefiner
     shutdownHook disabled as it was preventing the instance class loader from
     being garbage collected.  The log context is explicitly shutdown in
     Instance::shutdown.
-->
<Configuration status="ERROR" packages="org.apache.cassandra.distributed" shutdownHook="disable">
    <Appenders>
        <RollingFile name="INSTANCEFILE" fileName="./build/test/logs/${sys:cassandra.testtag}/TEST-${sys:suitename}.log"
	            filePattern="./build/test/logs/${sys:cassandra.testtag}/TEST-${sys:suitename}.log.%i.gz">
	    <PatternLayout pattern="%-5level [%thread] %date{ISO8601} %F:%L - %msg%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="20 MB"/>
            </Policies>
	    <DefaultRolloverStrategy max="20"/>
        </RollingFile>
        <Console name="INSTANCESTDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5level [%thread] ${instance:id} %date{HH:mm:ss,SSS} %msg%n"/>
            <Filters>
                <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </Console>
        <Console name="INSTANCESTDERR" target="SYSTEM_ERR">
            <PatternLayout pattern="%-5level [%thread] ${instance:id} %date{HH:mm:ss,SSS} %msg%n"/>
            <Filters>
                <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </Console>
        <Async name="INSTANCEASYNC" includeLocation="true">
            <AppenderRef ref="INSTANCEFILE" />
            <AppenderRef ref="INSTANCESTDOUT" />
            <AppenderRef ref="INSTANCESTDERR" />
        </Async>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="INSTANCEASYNC" />
        </Root>
    </Loggers>
</Configuration>

